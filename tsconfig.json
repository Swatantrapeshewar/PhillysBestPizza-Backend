{
	"compilerOptions": {
		"skipLibCheck": true,
		"lib": ["es5", "es6"],
		"declaration": true,
		"declarationMap": true,
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"strictFunctionTypes": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true
	}
}
